@model IEnumerable<Online_Learning_Platform.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Создать пост</a>
</p>

<ul >
    @foreach (var item in Model)
    {
        <li >
            
            <a style="text-decoration:none" asp-action="Details" asp-route-id="@item.Id">
                <div>
                    @if (item.Image != null)
                    {
                        <img style='width:200px; height:100px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                    }
                    else
                    {
                        <img style='width:200px; height:100px;' src="https://static.skillshare.com/uploads/discussion/tmp/7ab1b040.png">
                    }
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>
                        @Html.DisplayFor(modelItem => item.Description)
                    </p>
                    <p>
                        Время:  @Html.DisplayFor(modelItem => item.DateTime)
                    </p>
                    <p>
                        Создатель: @Html.DisplayFor(modelItem => item.User.Email)
                    </p>
                    <p>
                        Просмотры : @Html.DisplayFor(modelItem => item.Count)
                    </p>

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    <p>@Html.DisplayFor(modelItem => item.User.NickName)</p>
                </div>
            </a>
        </li>
    }

</ul>
