@{
    ViewData["Title"] = "Home Page";
}





<div class="p-4 p-md-5 mb-4  rounded " style="background-color:darkcyan;color:white">
    <div class="col-md-6 px-0">
        <h1 class="display-4 fst-italic">Начните свое обучение с Learning Platform</h1>
        <p class="lead my-3">Сейчас самое время развить свои навыки и достичь поставленных целей.Выбирайте лучшие курсы для своего обучения с Leagning Platform</p>
        <p class="lead mb-0"><a href="#" class="text-white fw-bold">Начать обучение...</a></p>
    </div>
</div>


<a asp-area="" asp-controller="Categories" asp-action="Index">Категории</a>
<a asp-area="" asp-controller="SubCategories" asp-action="Index">Подкатегории</a>


@*@await Component.InvokeAsync("GetCourses")*@


<div class="row g-5">
    <div class="col-md-8">
        <h3 class="pb-4 mb-4 fst-italic border-bottom">
            From the Firehose
        </h3>

        <article class="blog-post">
            @await Component.InvokeAsync("GetCourses")
        </article>

       

    </div>

    <div class="col-md-4">
        <div class="position-sticky" style="top: 2rem;">
            <div class="p-4 mb-3 bg-light rounded">
                <h4 class="fst-italic">About</h4>
                <p class="mb-0">Customize this section to tell your visitors a little bit about your publication, writers, content, or something else entirely. Totally up to you.</p>
            </div>

            <div class="p-4">
                <h4 class="fst-italic">Archives</h4>
                <ol class="list-unstyled mb-0">
                    @await Component.InvokeAsync("GetSubCategories")
                </ol>
            </div>

            <div class="p-4">
                <h4 class="fst-italic">Elsewhere</h4>
                <ol class="list-unstyled">
                    <li><a href="#">GitHub</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">Facebook</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
