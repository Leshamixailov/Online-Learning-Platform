@model IEnumerable<Online_Learning_Platform.Models.Course>




@foreach (var item in Model)
{


    
    <div style="width:100%;text-align:center;padding-top:30px;">

        <div style="box-shadow: 2px 2px 10px #246756;/*background:darkcyan;*/">
            <div class="box2">

                <p style="color:blue;">@Html.DisplayFor(modelItem => item.User.UserName) @item.DateTime.ToString()</p>
                

            </div>
            
            <a style="text-decoration:none" asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">
                <h4 style="color:black">@Html.DisplayFor(modelItem => item.Name)</h4>
                @if (item.Image != null)
                {
                    <img style='width:90%; height:auto; ' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                }
                else
                {
                    <img style='width:90%; height:auto; ' src="https://static.skillshare.com/uploads/discussion/tmp/7ab1b040.png">
                }
            </a>
            <a style="text-decoration:none;" asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">


                <div class="box">

                    <p class="lead my-3" style="color:black;word-wrap: break-word">@item.Description</p>
                   
                </div>


            </a>
            <div class="box2" style="padding-bottom:10px;">

                <a class="btn btn-outline-success me-2"  asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">Читать далее</a>


            </div>
            
        </div>
        @*<div style="box-shadow: 2px 2px 10px #246756;/*background:darkcyan*/;">
            <a style="text-decoration:none" asp-controller="Courses" asp-action="Details" asp-route-id="@item.Id">
                
              
                <div class="box">

                    <p class="lead my-3" style="color:black;word-wrap: break-word">@item.Description</p>
                    <p style="color:white">@Html.DisplayFor(modelItem => item.User.UserName)</p>
                </div>
                
                
            </a>
        </div>*@
        
    </div>

    
}

