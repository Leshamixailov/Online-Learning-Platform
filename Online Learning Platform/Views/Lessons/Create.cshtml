@model Online_Learning_Platform.Models.Lesson

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Lesson</h4>
<hr />
<div class="row">
   
    
        <form asp-action="Create" method="post" enctype="multipart/form-data">
         
            <div class="form-group">
                <label>Имя</label>
                <input name="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Текст</label>
            <textarea name="Description" rows="15" style="width:100%;">Отображение происходит если выбран тип вложения текст</textarea>
                
            </div>
            <div class="form-group" style="display:none;">
                <label>CourseId</label>
                <input name="CourseId" class="form-control" value="@ViewBag.Id" READONLY />
               @* <select asp-for="CourseId" class ="form-control" asp-items="ViewBag.CourseId"></select>*@
            </div>
            <div class="form-group">
            <label>Тип вложения</label>
            <select name="Type" class="form-control" >
                <option>Картинка</option>
                <option>Видео</option>
                <option>Текст</option>
            </select>
            </div>
            <div class="form-group">
                <label>Видео</label>
                <input type="file" name="Video" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
