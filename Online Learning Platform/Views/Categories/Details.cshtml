@model Online_Learning_Platform.Models.Category

@{
    ViewData["Title"] = "Details";
}
<h3 style="text-align:center">@Model.Name</h3>

<ul>
    <li>
        @foreach (var a in Model.SubCategory)
        {
            <a class="btn btn-outline-success me-2" asp-controller="SubCategories" asp-action="Details" asp-route-id="@a.Id">
                @a.Name
            </a>
        }
    </li>
</ul>

<ul>
    <li>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success me-2">Вернуться на главную</a>
    </li>
</ul>

<div>
    @foreach (var b in Model.SubCategory.ToList())
    {
        @foreach (var a in b.Courses)
        {

            <div>
                @if (a.Image != null)
                {
                    <img style='width:200px; height:100px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(a.Image))" />
                }
                else
                {
                    <img style='width:200px; height:100px;' src="https://static.skillshare.com/uploads/discussion/tmp/7ab1b040.png">
                }
                <h3>@Html.DisplayFor(modelItem => a.Name)</h3>
                <p>
                    @Html.DisplayFor(modelItem => a.Description)
                </p>

                <p>@Html.DisplayFor(modelItem => a.User.NickName)</p>
            </div>


        }
    }
</div>


